@{
    ViewData["title"] = "Blogs";
}
@model List<Blog>
<table class="table">
    <thead class="table-primary">
        <td>#</td>
        <td>Name</td>
        <td>Link</td>
        <td></td>
    </thead>
    <tbody class="table">
        @foreach (var blog in Model)
        {
            <tr>
                <td>@blog.Id</td>
                <td>@blog.Name</td>
                <td>@blog.Url</td>
                <td><button class="btn-close" type="button" onclick="confirm('Are you sure you want to delete this blog?') ? location.href = 'Blog/DeleteBlog/@blog.Id' : false"></button></td>
            </tr>
        }
    </tbody>
</table>
<button class="btn btn-primary" type="button" onclick="location.href = '/Blog/AddBlog'">Add Blog</button>